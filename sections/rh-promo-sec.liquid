<section class="rh-promo-sec">
      <div class="container-rh">
        <div class="rh-promo-wrapper">
          <div class="rh-promo-overlay" style="display: block;"></div>
          <div class="rh-promo-bg" style="display: block;"></div>
          {% if section.settings.promo_image %}
            <img 
              class="rh-promo-img"
              src="{{ section.settings.promo_image | img_url: '1803x' }}"
              alt="{{ section.settings.image_alt | escape }}"
              loading="lazy"
            >
          {% else %}
            <img
              class="rh-promo-img"
              src="https://placehold.co/1803x1202"
              alt="Students speaking confidently"
            />
          {% endif %}
          <div class="rh-promo-gradient" style="display: block;"></div>
          <div class="rh-promo-content">
            <div class="rh-promo-text">
              {{ section.settings.promo_text }}
            </div>
          </div>
        </div>
      </div>
    </section>
    {% style %}
    /* Promo Section Styles */
.rh-promo-sec {
    padding: 60px 20px;
    background: {{ section.settings.background }};
    overflow: hidden;
}

.rh-promo-sec .container-rh  {
    max-width: 1300px;
    margin: 0 auto;
}
.rh-promo-sec .container-rh .rh-promo-wrapper {
    width: 100%;
    height: 600px;
    position: relative;
    border-radius: 10px;
    overflow: hidden;
}

.rh-promo-sec .container-rh .rh-promo-overlay,
.rh-promo-sec .container-rh .rh-promo-bg {
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    position: absolute;
    background: #D9D9D9;
}

.rh-promo-sec .container-rh .rh-promo-bg {
    border-radius: 10px;
}

.rh-promo-sec .container-rh .rh-promo-img {
    width: 140%;
    height: auto;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    object-fit: cover;
}

.rh-promo-sec .container-rh .rh-promo-gradient {
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    position: absolute;
    background: linear-gradient(180deg, rgba(19, 19, 21, 0) 34%, #131315 90%);
}

.rh-promo-sec .container-rh .rh-promo-content {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 8px;
    background: linear-gradient(90deg, rgba(20, 20, 22, 0) 0%, rgba(174, 133, 118, 0.25) 50%, rgba(20, 20, 22, 0) 100%);
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    max-width: 900px;
}

.rh-promo-sec .container-rh .rh-promo-text {
    text-align: center;
    color: white;
    font-size: clamp(20px, 5vw, 48px);
    font-family: Fustat, sans-serif;
    font-weight: 700;
    line-height: 1.3;
    word-wrap: break-word;
}

/* Responsive Styles for Promo Section */
@media (max-width: 1200px) {
    .rh-promo-sec .container-rh .rh-promo-wrapper {
        max-width: 100%;
        height: 500px;
    }
}

@media (max-width: 991px) {
    .rh-promo-sec .container-rh .rh-promo-wrapper {
        height: 400px;
    }
    
    .rh-promo-sec .container-rh .rh-promo-content {
        bottom: 40px;
    }
}

@media (max-width: 767px) {
    .rh-promo-sec {
        padding: 40px 20px;
    }
    
    .rh-promo-sec .container-rh .rh-promo-wrapper {
        height: 350px;
    }
    
    .rh-promo-sec .container-rh .rh-promo-content {
        bottom: 30px;
        padding: 8px;
    }
}

@media (max-width: 575px) {
    .rh-promo-sec .container-rh .rh-promo-wrapper {
        height: 300px;
    }
    
    .rh-promo-sec .container-rh .rh-promo-content {
        bottom: 20px;
    }
}
    {% endstyle %}

{% schema %}
{
  "name": "RH Promo Section",
  "settings": [
    {
      "type": "color_background",
      "id": "background",
      "label": "Section Background",
      "default": "linear-gradient(#eff0f0, #eff0f0)"
    },
    {
      "type": "image_picker",
      "id": "promo_image",
      "label": "Promo Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "Students speaking confidently"
    },
    {
      "type": "text",
      "id": "promo_text",
      "label": "Promo Text",
      "default": "90% of our students speak more confidently after taking Lingoda classes"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Background Color",
      "default": "#D9D9D9"
    },
    {
      "type": "range",
      "id": "content_max_width",
      "min": 600,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Content Max Width",
      "default": 900
    }
  ],
  "presets": [
    {
      "name": "RH Promo Section",
      "settings": {}
    }
  ]
}
{% endschema %}