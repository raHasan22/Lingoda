<section class="rh-all-courses-hero">
      <div class="container-rh">
        <div class="text-part">
          <h2 class="sec-title">{{ section.settings.title }}</h2>
          <p class="sec-desc">{{ section.settings.description }}</p>
          <a href="{{ section.settings.button_link }}" class="rh-btn">
            {{ section.settings.button_text }} 
            {% if section.settings.show_arrow %}
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M14.21 8.25391H0.5" stroke="currentColor"/>
                <path d="M7.34961 1.39258C8.88961 4.07258 14.2096 8.25258 14.2096 8.25258C14.2096 8.25258 8.88961 12.4325 7.34961 15.1125" stroke="currentColor"/>
              </svg>
            {% endif %}
          </a>
        </div>
        <div class="image-part">
          {% if section.settings.hero_image %}
            <img 
              src="{{ section.settings.hero_image | img_url: '658x480', crop: 'center' }}"
              alt="{{ section.settings.image_alt | escape }}"
              loading="lazy"
              width="auto"
              height="auto"
            >
          {% else %}
            <img src="https://placehold.co/658x480" alt="All courses placeholder" />
          {% endif %}
        </div>
      </div>
    </section>

{% style %}
/* All Courses Hero Section */
.rh-all-courses-hero {
    padding: {{ section.settings.section_padding }}px 20px;
}

.rh-all-courses-hero .container-rh {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: {{ section.settings.content_gap }}px;
    padding: {{ section.settings.container_padding }}px {{ section.settings.container_padding_sides }}px;
    background-color: {{ section.settings.background_color }};
}

.rh-all-courses-hero .text-part {
    flex: 0 0 {{ section.settings.text_width }}%;
}

.rh-all-courses-hero .image-part {
    position: relative;
    flex: 0 0 {{ section.settings.image_width }}%;
}

.rh-all-courses-hero .sec-title {
    font-family: "Fustat", sans-serif;
    font-weight: 700;
    font-size: clamp(32px, 4vw, {{ section.settings.title_size }}px);
    line-height: 56px;
    color: {{ section.settings.title_color }};
    margin-bottom: {{ section.settings.title_margin }}px;
}

.rh-all-courses-hero .sec-desc {
    font-family: "Fustat", sans-serif;
    font-weight: 400;
    font-size: clamp(16px, 2vw, {{ section.settings.desc_size }}px);
    line-height: 24px;
    color: {{ section.settings.desc_color }};
    margin-bottom: {{ section.settings.desc_margin }}px;
}

.rh-all-courses-hero .rh-btn {
    display: inline-flex;
    align-items: center;
    gap: 7px;
    padding: {{ section.settings.button_padding_v }}px {{ section.settings.button_padding_h }}px;
    background: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    font-family: "Fustat", sans-serif;
    font-weight: 600;
    font-size: {{ section.settings.button_text_size }}px;
    line-height: 24px;
    text-decoration: none;
    border-radius: {{ section.settings.button_radius }}px;
    transition: all 0.3s ease;
}

.rh-all-courses-hero .rh-btn:hover {
    background: {{ section.settings.button_hover_bg_color }};
    transform: translateY(-2px);
}

.rh-all-courses-hero .image-part img {
    width: 100%;
    height: auto;
}

/* Keep existing media queries */
@media (max-width: 1200px) {
    .rh-all-courses-hero .container-rh {
        max-width: 960px;
        padding: 30px 40px;
        gap: 40px;
    }
}

@media (max-width: 991px) {
    .rh-all-courses-hero .container-rh {
        max-width: 720px;
        flex-direction: column-reverse;
        gap: 30px;
        padding: 30px;
    }

    .rh-all-courses-hero .text-part,
    .rh-all-courses-hero .image-part {
        flex: 0 0 100%;
    }
}

@media (max-width: 767px) {
    .rh-all-courses-hero {
        padding: 15px 20px;
    }

    .rh-all-courses-hero .container-rh {
        max-width: 540px;
        gap: 25px;
        padding: 25px 20px;
    }

    .rh-all-courses-hero .text-part {
        text-align: center;
    }

    .rh-all-courses-hero .sec-title {
        line-height: 1.2;
    }

    .rh-all-courses-hero .sec-desc {
        font-size: 16px;
        line-height: 22px;
    }
}

@media (max-width: 575px) {
    .rh-all-courses-hero {
        padding: 10px 15px;
    }

    .rh-all-courses-hero .container-rh {
        max-width: 100%;
        padding: 20px 15px;
        gap: 20px;
    }

    .rh-all-courses-hero .text-part {
        text-align: center;
    }

    .rh-all-courses-hero .rh-btn {
        justify-content: center;
    }
}
{% endstyle %}

